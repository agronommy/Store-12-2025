{% doc %}
  @prompt
    scrolling text quotes, change the font to playfair display
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-scrolling-quotes-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    position: relative;
    display: block;
  }

  .ai-scrolling-quotes__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.quote_spacing }}px;
    animation: ai-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
    will-change: transform;
  }

  .ai-scrolling-quotes-{{ ai_gen_id }}:hover .ai-scrolling-quotes__track-{{ ai_gen_id }} {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  .ai-scrolling-quotes__item-{{ ai_gen_id }} {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_spacing }}px;
    white-space: nowrap;
  }

  .ai-scrolling-quotes__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    color: {{ block.settings.icon_color }};
  }

  .ai-scrolling-quotes__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-style: {{ block.settings.text_font.style }};
  }

  @keyframes ai-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-scrolling-quotes__text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.8);
    }

    .ai-scrolling-quotes__icon-{{ ai_gen_id }} {
      width: calc({{ block.settings.icon_size }}px * 0.8);
      height: calc({{ block.settings.icon_size }}px * 0.8);
    }
  }
{% endstyle %}

<scrolling-quotes-{{ ai_gen_id }}
  class="ai-scrolling-quotes-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-scrolling-quotes__track-{{ ai_gen_id }}">
    {% liquid
      assign quotes_array = ''
      for i in (1..5)
        assign quote_key = 'quote_' | append: i
        assign quote_text = block.settings[quote_key]
        if quote_text != blank
          assign quotes_array = quotes_array | append: quote_text | append: '|||'
        endif
      endfor
      assign quotes = quotes_array | split: '|||'
    %}

    {% if quotes.size > 0 %}
      {% for i in (1..2) %}
        {% for quote in quotes %}
          {% if quote != blank %}
            <div class="ai-scrolling-quotes__item-{{ ai_gen_id }}">
              {% if block.settings.show_icon %}
                <svg
                  class="ai-scrolling-quotes__icon-{{ ai_gen_id }}"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  {% if block.settings.icon_style == 'quote' %}
                    <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
                  {% elsif block.settings.icon_style == 'star' %}
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  {% elsif block.settings.icon_style == 'heart' %}
                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                  {% elsif block.settings.icon_style == 'sparkle' %}
                    <path d="M12 2l1.5 5h5l-4 3.5 1.5 5.5-4-3-4 3 1.5-5.5-4-3.5h5z"/>
                  {% else %}
                    <circle cx="12" cy="12" r="3"/>
                  {% endif %}
                </svg>
              {% endif %}
              <span class="ai-scrolling-quotes__text-{{ ai_gen_id }}">{{ quote }}</span>
            </div>
          {% endif %}
        {% endfor %}
      {% endfor %}
    {% else %}
      {% for i in (1..2) %}
        <div class="ai-scrolling-quotes__item-{{ ai_gen_id }}">
          {% if block.settings.show_icon %}
            <svg
              class="ai-scrolling-quotes__icon-{{ ai_gen_id }}"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
            </svg>
          {% endif %}
          <span class="ai-scrolling-quotes__text-{{ ai_gen_id }}">Add your quotes in the block settings</span>
        </div>
        <div class="ai-scrolling-quotes__item-{{ ai_gen_id }}">
          {% if block.settings.show_icon %}
            <svg
              class="ai-scrolling-quotes__icon-{{ ai_gen_id }}"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <circle cx="12" cy="12" r="3"/>
            </svg>
          {% endif %}
          <span class="ai-scrolling-quotes__text-{{ ai_gen_id }}">Customize the style and speed</span>
        </div>
        <div class="ai-scrolling-quotes__item-{{ ai_gen_id }}">
          {% if block.settings.show_icon %}
            <svg
              class="ai-scrolling-quotes__icon-{{ ai_gen_id }}"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          {% endif %}
          <span class="ai-scrolling-quotes__text-{{ ai_gen_id }}">Perfect for testimonials and reviews</span>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</scrolling-quotes-{{ ai_gen_id }}>

<script>
  (function() {
    class ScrollingQuotes{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.adjustScrollSpeed();
      }

      adjustScrollSpeed() {
        const track = this.querySelector('.ai-scrolling-quotes__track-{{ ai_gen_id }}');
        if (!track) return;

        const trackWidth = track.scrollWidth / 2;
        const speed = {{ block.settings.scroll_speed }};
        const pixelsPerSecond = trackWidth / speed;

        track.style.setProperty('--scroll-distance', `-${trackWidth}px`);
      }
    }

    customElements.define('scrolling-quotes-{{ ai_gen_id }}', ScrollingQuotes{{ ai_gen_id }});
  })();
</script>

