{% capture minify %}
  <style>
    #psb-{{ section.id }} {
      overflow: hidden;
      background-color: {{section.settings.background_color}};
      padding-top: {{section.settings.section_padding_top_mobile}}px;
      padding-bottom: {{section.settings.section_padding_bottom_mobile}}px;
    }

    #psb-{{ section.id }} .swiper-wrapper {
      {% if section.settings.enable_center_mode == false %}
        width: fit-content;
      {% endif %}
    }

    #psb-{{ section.id }} .swiper-slide {
      padding: {{ section.settings.item_height }}px 40px;
      width: fit-content;
    }

    #psb-{{ section.id }} .swiper-slide:not(:last-child) {
      {% if section.settings.enable_border %}
        border-right: 1px solid {{ section.settings.heading_color }};
      {% endif %}
    }

    #psb-{{ section.id }} .navigation-link {
      display: flex;
      justify-content: center;
      align-items: center;
      color: {{ section.settings.heading_color }};
      text-decoration: none;
    }

    /* Media */
    @media screen and (min-width: 768px) {
      #psb-{{ section.id }} {
        padding-top: {{section.settings.section_padding_top}}px;
        padding-bottom: {{section.settings.section_padding_bottom}}px;
      }
    }
  </style>
{% endcapture %}
{{ minify | strip_newlines }}

<div id="psb-{{ section.id }}" class="psb-{{ section.id }} psb-section psb-navigation-navigation-01" style="display: none;">
  <div class="{{ section.settings.container_width }}">
    <psb-swiper data-config='
        {
          "centeredSlides": {{ section.settings.enable_center_mode }},
          "simulateTouch": true,
          "grabCursor": true,
          "slidesPerView": "auto",
          "watchOverflow": true,
          "loop": false,
          "freeMode": true,
          "speed": 300,
          "effect": "slide"
        }
      '>
      <div class="slider-{{section.id}} item-slider swiper-container swiper" style="overflow:visible">
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="swiper-slide" {{ block.shopify_attributes }}>
              {% liquid
                if block.settings.url != blank
                  assign wrapper = 'a'
                else
                  assign wrapper = 'div'
                endif
              %}
              <{{ wrapper }}
                {%- if wrapper == 'a' -%}
                  href="{{ block.settings.url }}"
                {%- endif -%}
                class="navigation-link"
              >
                <{{ section.settings.heading_tag }} class="slide_info-name">
                  {% if block.settings.title %}
                    {{ block.settings.title }}
                  {% endif %}
                </{{ section.settings.heading_tag }}>
              </{{ wrapper }}>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </psb-swiper>
  </div>
</div>

