{%- capture datetime -%}
  {{- section.settings.countdown_year | append: '-' -}}
  {{- section.settings.countdown_month | append: '-' -}}
  {{- section.settings.countdown_day | append: 'T' -}}
  {{- section.settings.countdown_hour | append: ':' -}}
  {{- section.settings.countdown_minute | append: ':00.000' -}}
{%- endcapture -%}

{%- liquid
  assign timezone = datetime | date: '%z'
  assign datetime = datetime | append: timezone
  assign countdown_message = section.settings.countdown_message

  assign text_color = section.settings.text_color
  assign background_color = section.settings.background_color
  assign has_gradient = false

  if section.settings.background_gradient != blank
    assign background_color = section.settings.background_gradient
    assign has_gradient = true
  endif

  assign content_heading_desktop = section.settings.countdown_heading
  assign content_heading_mobile = section.settings.countdown_heading_mobile | default: content_heading_desktop

  assign content_link = false

  if content_heading_desktop contains "<a" or content_heading_mobile contains "<a"
    assign content_link = true
  endif
-%}

<section
  id="{{ section.id }}"
  class="
    pxu-section
    pxu-countdown-timer-bar
    {% if has_gradient == true %}
      pxu-countdown-timer-bar--background-gradient
    {%- endif -%}
  "
  style="
    --pxu-section-text-color: {{ text_color }};
    --pxu-section-text-color-alpha-50: {{ text_color | color_modify: 'alpha', 0.50 }};
    --pxu-section-background-color: {{ background_color }};
    --pxu-section-padding-top: {{ section.settings.padding_top }}px;
    --pxu-section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --pxu-section-margin-top: {{ section.settings.margin_top }}px;
    --pxu-section-margin-bottom: {{ section.settings.margin_bottom }}px;
    --pxu-section-content-justification: {{ section.settings.countdown_content_justification }};
  "
  data-pxu-countdown-timer-bar
>
  <script
    type="application/json"
    data-component-data
  >
    {
      "id": "{{ section.id }}",
      "handle": "pxu-countdown-timer-bar",
      "className": "CountdownTimerBarSection",
      "name": "Countdown timer-bar",
      "version": "1.0.2",
      "scriptsUrl": "{{ 'scripts.js' | asset_url | replace: '/assets/', '/compiled_assets/' }}",
      "countdownDatetime": {{ datetime | json }}
    }
  </script>

  {% if section.settings.countdown_bar_link != blank and content_link == false %}
    <a
      href="{{ section.settings.countdown_bar_link }}"
  {% else %}
    <div
  {% endif %}
    class="
      pxu-section__container pxu-countdown-timer-bar__container
      pxu-countdown-timer-bar__countdown--loading

      {% if section.settings.countdown_timer_complete == true %}
        pxu-countdown-timer-bar__countdown--hide-on-complete
      {%- endif %}
    "
    data-pxu-countdown-timer-bar-countdown
  >
    {% if content_heading_desktop != blank or content_heading_mobile != blank %}
      <div class="pxu-countdown-timer-bar__content">
        <h2 class="pxu-countdown-timer-bar__content--desktop">{{ content_heading_desktop }}</h2>
        <h2 class="pxu-countdown-timer-bar__content--mobile">{{ content_heading_mobile }}</h2>
      </div>
    {% endif %}
    <div class="pxu-countdown-timer-bar__countdown-wrapper">
      <div class="pxu-countdown-timer-bar__countdown">
        <time
          class="
            pxu-countdown-timer-bar__countdown-datetime
            pxu-visually-hidden
          "
          datetime="{{ datetime }}"
        >
        </time>

        {%- for i in (1..4) -%}
          {%- capture time_cycle -%}
            {%- cycle 'day', 'hrs', 'min', 'sec' -%}
          {%- endcapture -%}

          <div
            class="
              pxu-countdown-timer-bar__countdown-time
              pxu-countdown-timer-bar__countdown-time--{{- time_cycle -}}
            "
          >
            <h3
              class="pxu-countdown-timer-bar__countdown-time-heading"
              data-pxu-countdown-timer-bar-countdown-{{- time_cycle -}}
            ></h3>

            <span class="pxu-countdown-timer-bar__countdown-time-text">
              {{- time_cycle -}}
            </span>
          </div>
        {%- endfor -%}
      </div>
      {%- if countdown_message != blank -%}
        <div class="pxu-countdown-timer-bar__countdown-message pxu-rte">
          {{- countdown_message -}}
        </div>
      {%- endif -%}
    </div>
{% if section.settings.countdown_bar_link != blank and content_link == false %}
  </a>
{% else %}
  </div>
{% endif %}
</section>

